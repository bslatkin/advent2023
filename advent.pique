import "io"


def handle-error (e)
  if equal (error-value e) io.EOF then
    return true ""
    else
    raise e


def read-all-helper (accumulated)
  let eof value =
    guard
      handle-error
      lambda: list false (input "")

  if eof then
    return list.reverse accumulated

  return read-all-helper (prepend value accumulated)


def read-all ()
  return read-all-helper nil


export read-all
